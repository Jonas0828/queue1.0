<view class="page">
  <view class="page__bd">
    <view class="tabdata">
      <view class="tabitem {{selectA? 'tab': ''}}" bindtap="changeSelect" data-index="0"><view>全部</view></view>
      <view class="tabitem {{selectB? 'tab': ''}}" bindtap="changeSelect" data-index="1"><view>已办理</view></view>
      <view class="tabitem {{selectC? 'tab': ''}}" bindtap="changeSelect" data-index="2"><view>未办理</view></view>
      <view class="tabitem {{selectD? 'tab': ''}}" bindtap="changeSelect" data-index="3"><view>已过期</view></view>
    </view>
    <view wx:for="{{list}}" class="weui-form-preview" >

      <view class="weui-form-preview__bd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">业务类型</view>
          <view class="weui-form-preview__value">{{item.tradeName}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">预约网点</view>
          <view class="weui-form-preview__value">{{item.bankInfo.DotName}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">预约日期</view>
          <view class="weui-form-preview__value">{{item.reserveDate}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">业务状态</view>
          <view class="weui-form-preview__value">{{item.status}}</view>
        </view>
        <view class="weui-form-preview__ft">
                <view class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active" bindtap="jumptodisplay" data-index="{{index}}">查看详情</view>
            </view>
      </view>
    </view>
  </view>
</view>