.weui-form-preview{
  margin-top: 10px;
}

.add{
  margin: 10px;
   display: flex; 
  /* 交叉轴上的对齐方式 */
  align-items: center;
 
  /* 主轴对齐方式 */
  justify-content: center;
  border: 2px;
  border-color: #B4B4B4;
  border-style: dashed;
}

.tabdata{
  height: 40px;
  width: 100%;
  display: flex;
  margin-top: 10px;
  justify-content: center;
  align-items: center;
}

.tabitem{
  width: 23%;
  height: inherit;
  background-color:#FFFFFF;
  border-style: solid;
  border-color: rgba(34, 26, 26, 0.1);
  border-width: 1px;
  color: #55AAAD;
  text-align: center;
  vertical-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tabitem:nth-child(1){
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
}

.tabitem:nth-child(4){
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
}

.tab{
  background-color: #55AAAD;
  color: #FFFFFF;
}

