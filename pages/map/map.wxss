page {
  height: 100%;
  width: 100%;
  overflow-y:hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.displayinline{
  display: flex;
  align-items: center;
}

view{
  height: 100%;
  width: 100%;
  
}
map{
  height: 100%;
   width: 100%;
}

.toparea{
  height: 70rpx;
  background-color: #FFFFFF;
}

.topmenu{
  width: 45%;
  height: 100%;
  font-size: 12pt;
  text-align: center;
  line-height: 70rpx;
}

.query{
  width: 8%;
}

.movearea{
  width: 90%;
  height: 5rpx;
}

.moveview{
  width: 45%;
