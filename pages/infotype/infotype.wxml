<view class="page">
    <view class="page__bd page__bd_spacing">
        <view class="kind-list">
            <block wx:for="{{list}}" wx:key="id">
                <view class="kind-list__item" bindtap="updateInfo">
                    <view class="weui-flex kind-list__item-hd {{item.open ? 'kind-list__item-hd_show' : ''}}">
                        <view class="weui-flex__item">{{item.name}}</view>
                        <view style="display: inline-block;vertical-align:middle; font-size: 17px;">{{item.complete.msg}}</view>
                        <view class="weui-badge weui-badge_dot" style="margin-left: 5px;margin-right: 5px;"></view>
                        <image class="kind-list__img" src="../resource/picture/map/go.png"></image>
                    </view>
                </view>
            </block>
        </view>
    </view>
</view>